schema {
    query: QueryType
    mutation: Mutation

}

type Mutation {
  savePerson(name: String!, age: Int!): Person
}

type QueryType {
  allPersons: [Person]
}


type Person {
    id : ID
    name : String!
    age : String!
    posts: [Post]

}


type Post {
    id : ID
    title : String!
    author : String!
}